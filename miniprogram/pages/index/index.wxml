<!--index.wxml-->
<view class="container">
	<!--从这里开始是Hiko写的主页部分-->
	<image class="title" src="../../images/Sysbtn/title.png" catchtap="hideatt"></image>
	<view class="{{showAtt?'index_att_hide':'index_att_show'}}" id="attention" catchtap="hideatt">
		<image class="{{showAtt?'dialog1_hide':'dialog1_show'}} " src="../../images/index/dialog.png"></image>
		<text id="index_text">
		{{'Hi~'+message}}
		</text>
	</view>
  <view class="maincontain" >
	<view class="itemcontainer" croll-y="true"  
   style="height: 530rpx;" bindscrolltoupper="upper"
    bindscrolltolower="lower" bindscroll="scroll"
     scroll-into-view="{{toView}}"
      scroll-top="{{scrollTop}}">
		<view wx:for="{{todo}}" wx:key="index" id="{{'todo'+index}}" class="itemcontain">
			<view class="leftcontain">
				<text class="item_name"> {{item.item.name}}</text>
				<view class="starcontain">
					<image wx:for="{{item.item.important}}" class="star" src="../../images/Sysbtn/star1.png"></image>
				</view>

			</view>
			<view class="rightcontain">
				<text class="item_group"> {{item.item.group}}</text>
				<text class="item_ddl"> {{item.item.time}}</text>

			</view>
		</view>
	</view>
      <view class="btncontain">
  <image class="indexbtn" id="addbtn" src="../../images/Sysbtn/addbtn.png"></image>
  <image class="indexbtn"  id="calbtn" src="../../images/Sysbtn/calbtn.png"></image>
  <image class="indexbtn"  id="clockbtn" src="../../images/Sysbtn/clockbtn.png"></image>
  </view>
  </view>
  <view class="btncontain2">
    <image class="indexbtn2" id="menubtn" src="../../images/Sysbtn/menu.png"></image>
    <image class="indexbtn2" id="recordbtn" src="../../images/index/record_1.png"></image>
    <image class="indexbtn2" id="suobtn" src="../../images/Sysbtn/clock_1.png"></image>
  </view>
